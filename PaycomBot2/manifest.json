{
  "manifest_version": 3,
  "name": "Paycom Punch Automator",
  "version": "2.0",
  "description": "Automate time punches on Paycom website",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.paycom.com/*",
    "https://*.paycomonline.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Paycom Punch Automator"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.paycom.com/*",
        "https://*.paycomonline.net/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
